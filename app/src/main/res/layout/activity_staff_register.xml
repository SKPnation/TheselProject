<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/main_background"
    android:backgroundTint="@color/colorPrimary"
    android:backgroundTintMode="multiply"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container"
    tools:context=".Authentication.StaffRegisterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/loginTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already Have an Account? Login"
            android:textColor="#fff"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <ImageView
                android:src="@drawable/thesel_logo"
                android:layout_marginTop="20dp"
                android:layout_width="150dp"
                android:layout_height="150dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/uname_layout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                android:textColorHint="#aaa"
                android:textColorHighlight="#aaa"
                android:background="@drawable/customedittextstyle"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/uNameEt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:hint="@string/staffNameEt"
                    android:background="@android:color/transparent"
                    android:singleLine="true"
                    android:inputType="text"
                    android:textAllCaps="true"/>

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/customedittextstyle"
                android:orientation="vertical"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Phone number"
                    android:textSize="18sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <com.hbb20.CountryCodePicker
                        android:id="@+id/ccp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:ccp_defaultNameCode="NG"/>

                    <EditText
                        android:id="@+id/phoneEt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="phone"
                        android:textColorHint="#aaa"
                        android:textColor="@android:color/white"
                        android:inputType="phone"
                        android:singleLine="true"/>

                </LinearLayout>

            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/email_layout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                android:textColorHint="#aaa"
                android:textColorHighlight="#aaa"
                android:background="@drawable/customedittextstyle"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/emailEt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#fff"
                    android:hint="Email"
                    android:textSize="20sp"
                    android:background="@android:color/transparent"
                    android:singleLine="true"
                    android:inputType="textEmailAddress" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/password_layout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                android:textColorHint="#aaa"
                android:textColorHighlight="#aaa"
                android:background="@drawable/customedittextstyle"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="#aaa"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/passwordEt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#fff"
                    android:hint="Thesel consultant password"
                    android:textSize="20sp"
                    android:background="@android:color/transparent"
                    android:singleLine="true"
                    android:inputType="textPassword" />

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/customedittextstyle"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Select your location"
                    android:textSize="18sp"/>

                <LinearLayout
                    android:id="@+id/sp_container"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@android:color/white"
                    android:animateLayoutChanges="true"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <Spinner
                        android:id="@+id/sp_country"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:spinnerMode="dropdown" />

                </LinearLayout>

            </LinearLayout>

            <EditText
                android:id="@+id/categoryEt"
                android:layout_below="@id/categoryTv"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#ffff"
                android:layout_marginTop="4dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:visibility="gone"
                android:tooltipText="tap none if category doesn't exist"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Put in your convenient counselling hours during the day and night. Ensure you are available during your counselling hours."
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/colorAccent"/>

            <HorizontalScrollView
                android:id="@+id/hs1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/workText1"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Day"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"/>

                    <EditText
                        android:id="@+id/startTimeEt1"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:hint="00:00"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:background="#fff"
                        android:layout_toRightOf="@id/workText1"
                        android:layout_marginLeft="5dp"
                        android:layout_alignParentBottom="true" />

                    <TextView
                        android:id="@+id/toText1"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/startTimeEt1"
                        android:layout_alignParentBottom="true"
                        android:text="to"
                        android:paddingLeft="5dp"
                        android:textColor="#fff"/>

                    <EditText
                        android:id="@+id/endTimeEt1"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:hint="00:00"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:background="#fff"
                        android:layout_toRightOf="@id/toText1"
                        android:layout_marginLeft="5dp"
                        android:layout_alignParentBottom="true" />

                </RelativeLayout>

            </HorizontalScrollView>

            <HorizontalScrollView
                android:id="@+id/hs2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/workText2"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Night"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"/>

                    <EditText
                        android:id="@+id/startTimeEt2"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:hint="00:00"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:background="#fff"
                        android:layout_toRightOf="@id/workText2"
                        android:layout_marginLeft="5dp"
                        android:layout_alignParentBottom="true" />

                    <TextView
                        android:id="@+id/toText2"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/startTimeEt2"
                        android:layout_alignParentBottom="true"
                        android:text="to"
                        android:paddingLeft="5dp"
                        android:textColor="#fff"/>

                    <EditText
                        android:id="@+id/endTimeEt2"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:hint="00:00"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:background="#fff"
                        android:layout_toRightOf="@id/toText2"
                        android:layout_marginLeft="5dp"
                        android:layout_alignParentBottom="true" />

                </RelativeLayout>

            </HorizontalScrollView>

            <Button
                android:id="@+id/signUpBtn"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:background="@drawable/customregisterbtnstyle"
                android:text="Sign Up"
                android:textSize="22sp"
                android:textColor="#ffffff"
                android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                android:textAllCaps="false"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:id="@+id/reg_agreementTv"
                android:textAlignment="center"
                android:text=""
                android:textColor="#aaa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>

    </RelativeLayout>

</ScrollView>