<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/offlineIv"
            android:src="@drawable/ic_offline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"/>

        <ImageView
            android:id="@+id/onlineIv"
            android:src="@drawable/ic_online"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatarIv"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/colorAccent"
            app:civ_border_overlay="true"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/nameTv"
            android:layout_below="@id/avatarIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_centerHorizontal="true"
            android:text=""
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/countryTv"
            android:layout_below="@id/nameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorPrimaryDark"
            android:text=""
            android:textSize="18sp"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/categoryTv1"
            android:layout_below="@id/countryTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text=""
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#005F28"
            android:layout_marginTop="2dp"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/categoryTv2"
            android:layout_below="@id/categoryTv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text=""
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="2dp"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/categoryTv3"
            android:layout_below="@id/categoryTv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text=""
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="2dp"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/costTv"
            android:layout_below="@id/categoryTv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text=""
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="2dp"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/buttons_linear_layout"
            android:layout_below="@id/costTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:weightSum="3">

            <ImageButton
                android:id="@+id/profileBtn"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="2dp"
                android:background="@drawable/customrequestbtnstyle"
                android:src="@drawable/ic_profile_white"/>

            <ImageButton
                android:id="@+id/scheduleBtn"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="2dp"
                android:background="@drawable/customrequestbtnstyle"
                android:src="@drawable/ic_schedule"/>

            <ImageButton
                android:id="@+id/instantBtn"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="2dp"
                android:background="@drawable/customrequestbtnstyle"
                android:src="@drawable/ic_access_time" />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>