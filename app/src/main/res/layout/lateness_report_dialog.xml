<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send a report if the counsellor takes too long to reply"
        android:textSize="18sp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:id="@+id/report_title" />

    <TextView
        android:layout_below="@id/report_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Report:"
        android:textSize="16sp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:id="@+id/textReportMessage" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@null"
        android:layout_below="@+id/textReportMessage"
        android:layout_marginTop="10dp"
        android:text="has not replied for over 10 minutes"
        android:textSize="15sp"
        android:singleLine="true"
        android:id="@+id/report_message"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

</RelativeLayout>