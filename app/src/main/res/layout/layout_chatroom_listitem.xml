<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/grey_border"
        android:id="@+id/layout_container">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relLayout1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/avatarIv"
                android:scaleType="centerCrop" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/consultation_date"
                android:layout_toRightOf="@id/avatarIv"
                android:layout_toLeftOf="@+id/icon_trash"
                android:textColor="#707070"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"
                android:layout_centerVertical="true"
                android:textSize="13sp"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/icon_trash"
                android:scaleType="centerCrop"
                android:tint="@android:color/holo_red_dark"
                android:src="@drawable/ic_delete_black_24dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relLayout1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:id="@+id/number_chatmessages"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#000"
                android:id="@+id/his_name"
                android:layout_toLeftOf="@+id/number_chatmessages"
                android:layout_alignParentLeft="true"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>