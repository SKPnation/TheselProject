<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_fragment"
    tools:context=".Questionnaire.SecondQuestionnaire">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What referred you to Thesel?"
            android:textSize="24sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/radio_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/customquestionnairebtnstyle"
            android:text="Radio"
            android:textSize="20sp"
            android:textAlignment="textStart"
            android:paddingLeft="30dp"
            android:textColor="#ffffff"
            android:textAllCaps="false"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/friend_family_member_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/customquestionnairebtnstyle"
            android:text="Friend or family member"
            android:textAlignment="textStart"
            android:paddingLeft="30dp"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/poster_billboard_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/customquestionnairebtnstyle"
            android:text="Poster or billboard"
            android:textAlignment="textStart"
            android:paddingLeft="30dp"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/snapchat_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/customquestionnairebtnstyle"
            android:text="Snapchat"
            android:textAlignment="textStart"
            android:paddingLeft="30dp"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/TV_ad_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/customquestionnairebtnstyle"
            android:text="TV ad"
            android:textAlignment="textStart"
            android:paddingLeft="30dp"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/social_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/customquestionnairebtnstyle"
            android:text="Social media post"
            android:textAlignment="textStart"
            android:paddingLeft="30dp"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/youtube_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/customquestionnairebtnstyle"
            android:text="Youtube"
            android:textAlignment="textStart"
            android:paddingLeft="30dp"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/podcast_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/customquestionnairebtnstyle"
            android:text="Podcast"
            android:textAlignment="textStart"
            android:paddingLeft="30dp"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/other_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/customquestionnairebtnstyle"
            android:text="Other"
            android:textAlignment="textStart"
            android:paddingLeft="30dp"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:layout_marginBottom="30dp"/>


    </LinearLayout>

</ScrollView>