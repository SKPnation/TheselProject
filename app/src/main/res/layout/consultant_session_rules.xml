<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/titleTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Read the rules"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="@color/colorPrimary"
                android:paddingLeft="10dp"
                android:layout_centerHorizontal="true"/>

            <LinearLayout
                android:layout_below="@id/titleTv"
                android:id="@+id/rulesLayout"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/firstCounsellorRule"
                    android:textColor="#B70000"
                    android:textSize="16sp"
                    android:paddingRight="5dp"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"/>

                <TextView
                    android:layout_below="@id/titleTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/secondCounsellorRule"
                    android:textColor="#B70000"
                    android:textSize="16sp"
                    android:layout_marginTop="15dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"/>

                <TextView
                    android:layout_below="@id/titleTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/thirdCounsellorRule"
                    android:textColor="#B70000"
                    android:textSize="16sp"
                    android:layout_marginTop="15dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"/>

                <TextView
                    android:layout_below="@id/titleTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fourthCounsellorRule"
                    android:textColor="#B70000"
                    android:textSize="16sp"
                    android:layout_marginTop="15dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"/>

                <TextView
                    android:layout_below="@id/titleTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fifthCounsellorRule"
                    android:textColor="#B70000"
                    android:textSize="16sp"
                    android:layout_marginTop="15dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"/>

                <TextView
                    android:layout_below="@id/titleTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sixthCounsellorRule"
                    android:textColor="#B70000"
                    android:textSize="16sp"
                    android:layout_marginTop="15dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"/>

                <TextView
                    android:layout_below="@id/titleTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/seventhCounsellorRule"
                    android:textColor="#B70000"
                    android:textSize="16sp"
                    android:layout_marginTop="15dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"/>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>




</androidx.cardview.widget.CardView>