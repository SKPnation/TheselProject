<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/offlineIv"
            android:src="@drawable/ic_offline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"/>

        <ImageView
            android:id="@+id/onlineIv"
            android:src="@drawable/ic_online"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cPictureIv"
            android:src="@drawable/default_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/cNameTv"
            android:layout_below="@id/cPictureIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_centerHorizontal="true"
            android:text=""
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/cCountryTv"
            android:layout_below="@id/cNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorPrimaryDark"
            android:text=""
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/categoryTv1"
            android:layout_below="@id/cCountryTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text=""
            android:textSize="18sp"
            android:layout_marginTop="2dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/categoryTv2"
            android:layout_below="@id/categoryTv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text=""
            android:textSize="18sp"
            android:layout_marginTop="2dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/categoryTv3"
            android:layout_below="@id/categoryTv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text=""
            android:textSize="18sp"
            android:layout_marginTop="2dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/cCostTv"
            android:layout_below="@id/categoryTv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text=""
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="2dp"/>

        <Button
            android:id="@+id/profileBtn"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_below="@id/cCostTv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/customrequestbtnstyle"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:text="Profile"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/requestBtn"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_below="@id/profileBtn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/customrequestbtnstyle"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/workHours"
            android:background="@drawable/grey_border_bottom"
            android:layout_below="@id/requestBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:textColor="#000"
            android:text="MY COUNSELLING HOURS"/>

        <TextView
            android:id="@+id/dayTime"
            android:layout_below="@id/workHours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:text=""/>

        <TextView
            android:id="@+id/nightTime"
            android:layout_below="@id/dayTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:text=""/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>