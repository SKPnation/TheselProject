<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/request_client_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginLeft="10dp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textAllCaps="true"/>
                <TextView
                    android:id="@+id/request_counsellor_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginLeft="10dp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textAllCaps="true"/>

                <TextView
                    android:id="@+id/request_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/request_counsellor_name"
                    android:text=""
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="italic"
                    android:textAllCaps="true" />

                <TextView
                    android:id="@+id/request_time"
                    android:layout_below="@id/request_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginLeft="10dp"
                    android:textStyle="italic" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/acceptBtn"
                android:layout_gravity="center_vertical"
                android:background="@drawable/customrequestbtnstyle"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text=""
                android:textColor="#fff"
                android:layout_marginRight="16dp"
                android:visibility="gone"/>

            <Button
                android:id="@+id/emptyBtn"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:background="@drawable/customrequestbtnstyle"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="EMPTY"
                android:textColor="#fff"
                android:layout_marginRight="16dp"
                android:visibility="gone"/>

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>