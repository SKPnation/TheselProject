<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="40dp"
    android:id="@+id/main_fragment"
    tools:context=".Questionnaire.SixthQuestionnaire">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do you feel that your mental health is being impacted by the coronavirus outbreak?"
        android:textSize="24sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/no_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/customquestionnairebtnstyle"
        android:text="No"
        android:textSize="20sp"
        android:textAlignment="textStart"
        android:paddingLeft="30dp"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/yes_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/customquestionnairebtnstyle"
        android:text="Yes"
        android:textAlignment="textStart"
        android:paddingLeft="30dp"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/maybe_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/customquestionnairebtnstyle"
        android:text="Maybe"
        android:textAlignment="textStart"
        android:paddingLeft="30dp"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:layout_marginBottom="30dp"/>

</LinearLayout>